<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restopackage.rkmalik.resto"
    android:maxSdkVersion="22"
    android:minSdkVersion="14" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <meta-data
            android:name="DATABASE"
            android:value="restoDB" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.rkmalik.resto" />

        <activity
            android:name="com.restopackage.rkmalik.resto.NearByRestaurants"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.restopackage.rkmalik.resto.FoodItems"
            android:label="@string/app_name"
            android:parentActivityName="com.restopackage.rkmalik.resto.NearByRestaurants"
            android:theme="@style/Theme.AppCompat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restopackage.rkmalik.resto.NearByRestaurants" />
        </activity>
        <activity
            android:name="com.restopackage.rkmalik.resto.FoodItemDetailActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.restopackage.rkmalik.resto.FoodItems"
            android:theme="@style/Theme.AppCompat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restopackage.rkmalik.resto.FoodItems" />
        </activity>
        <activity
            android:name="com.restopackage.rkmalik.resto.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.restopackage.rkmalik.resto.BuildOrderPage"
            android:label="Build Order - Step 1"
            android:theme="@style/Theme.AppCompat">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restopackage.rkmalik.resto.FoodItems" />
        </activity>
        <activity
            android:name="com.restopackage.rkmalik.resto.BuildOrderPageTwo"
            android:label="Build Order - Step 2"
            android:theme="@style/Theme.AppCompat">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restopackage.rkmalik.resto.BuildOrderPage" />
        </activity>
    </application>

</manifest>
